# Directus Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION (Required)
# ===========================================
DB_CLIENT=pg
DB_HOST=db
DB_PORT=5432
DB_DATABASE=directus
DB_USER=your_db_user
DB_PASSWORD=your_secure_password

# ===========================================
# SECURITY (Required)
# ===========================================
# Generate a secure random key (at least 32 characters)
DIRECTUS_SECRET=your-random-secret-key-at-least-32-characters-long

# ===========================================
# ADMIN ACCOUNT (Required for first run)
# ===========================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-admin-password

# ===========================================
# PORTS AND URLs (Required)
# ===========================================
# Port for Directus to listen on
DIRECTUS_PORT=8055

# Public URL for the application
# Use actual domain for production
PUBLIC_URL=http://localhost:8055

# ===========================================
# CACHING (Recommended)
# ===========================================
CACHE_ENABLED=true
CACHE_AUTO_PURGE=true
CACHE_STORE=redis
REDIS=redis://redis:6379

# ===========================================
# CORS SETTINGS (Recommended)
# ===========================================
CORS_ENABLED=true
CORS_ORIGIN=*

# ===========================================
# SECURITY COOKIES (Production recommended)
# ===========================================
REFRESH_TOKEN_COOKIE_SECURE=true
REFRESH_TOKEN_COOKIE_SAME_SITE=lax
REFRESH_TOKEN_COOKIE_DOMAIN=

SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAME_SITE=lax
SESSION_COOKIE_DOMAIN=

# ===========================================
# ELASTICSEARCH INTEGRATION (Optional)
# ===========================================
# Elasticsearch server URL
ELASTICSEARCH_NODE=http://localhost:9200

# Elasticsearch index name
ELASTICSEARCH_INDEX=directus_items

# Elasticsearch authentication (optional)
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=your_password

# SSL verification (set to 'false' for self-signed certs)
ELASTICSEARCH_VERIFY_SSL=true

# Collections to index (comma-separated, leave empty for all)
# INDEXED_COLLECTIONS=articles,products,users

# ===========================================
# EMAIL SETTINGS (Optional)
# ===========================================
EMAIL_TRANSPORT=sendmail
EMAIL_FROM=noreply@example.com

# For SMTP:
# EMAIL_TRANSPORT=smtp
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=smtp_user
# EMAIL_SMTP_PASSWORD=smtp_password

# ===========================================
# EXTENSIONS (Advanced)
# ===========================================
EXTENSIONS_PATH=/directus/extensions
EXTENSIONS_AUTO_RELOAD=false
EXTENSIONS_ROLLDOWN=auto

# ===========================================
# WEBHOOKS & WEBSOCKETS (Optional)
# ===========================================
WEBSOCKETS_ENABLED=true

# ===========================================
# CONTENT SECURITY POLICY (Advanced)
# ===========================================
# CONTENT_SECURITY_POLICY_DIRECTIVES__FRAME_SRC=self
